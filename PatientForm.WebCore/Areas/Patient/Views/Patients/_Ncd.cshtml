@model PatientForm.ViewModel.PatientInfoViewModel

<div class="row form-group mb-2">
    <div class="col-md-3 text-end">@Html.DisplayNameFor(x => x.LeftNcdList)</div>
    <div class="col-md-9">
        <div class="row">
            <div class="col-md-5">
                <select id="LeftNcdList" asp-for="LeftNcdList" asp-items="Model.LeftNcdList" multiple class="w-100"></select>
            </div>
            <div class="col-md-2">
                <a class="btn btn-outline-secondary text-black w-100 mb-2 add-ncds-to-selected-list">Add ></a>
                <a class="btn btn-outline-secondary text-black w-100 remove-ncds-to-selected-list">< Remove</a>
            </div>
            <div class="col-md-5">
                <select id="RightNcdList" asp-for="RightAllergieList" asp-items="Model.RightNcdList" multiple class="w-100"></select>
            </div>
        </div>
    </div>
</div>